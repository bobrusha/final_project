<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.elegion.androidschool.finalproject.InfoAboutMarketFragment"
              tools:showIn="@layout/activity_info_about_market">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/info_about_market_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text_market_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"/>

        </android.support.design.widget.TextInputLayout>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/info_about_market_map_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
